{
  "name": "wallet-guise-plasmo-ext",
  "displayName": "Wallet guise plasmo ext",
  "version": "0.0.3",
  "description": "Wallet Guise - preloaded wallets",
  "author": "WalletGuise",
  "scripts": {
    "push-all": "git push origin && git push github.com",
