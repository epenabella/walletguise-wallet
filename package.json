    "qrcode": "^1.5.4",
    "svelte": "4.2.19",
    "tweetnacl": "^1.0.3",
    "wallet": "link:@types/@wallet-standard/wallet",
    "wallet-standard": "^1.1.1"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "prettier": "3.2.4",
    "svelte-preprocess": "^6.0.3",
    "tailwindcss": "^4.1.4",
    "typescript": "5.3.3"
  },
  "manifest": {
    "name": "WalletGuise",
    "description": "A lightweight Solana wallet built with Svelte + Plasmo",
    "host_permissions": [
      "https://*/*"
    ],
    "permissions": [
      "storage",
      "scripting"
    ],
    "action": {
      "default_title": "WalletGuise",
      "default_popup": "popup.html"
    }
  }
